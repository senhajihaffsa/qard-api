{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <p><a href="{{ path('company_list') }}">‚Üê Retour √† la liste</a></p>
    <h1>üìä Dashboard</h1>

    <p>Nombre total d'entreprises : <strong>{{ companies|length }}</strong></p>

    <h2>R√©partition des statuts</h2>
    <ul>
        {% for status, count in statusStats %}
            <li>{{ status }} : {{ count }}</li>
        {% endfor %}
    </ul>

    <h2>Chiffre d'affaires (simul√©)</h2>
    <canvas id="caChart" width="400" height="200"></canvas>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('caChart').getContext('2d');
        const caChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: {{ companies|map(c => c.name)|json_encode|raw }},
                datasets: [{
                    label: 'Chiffre d\'affaires (‚Ç¨)',
                    data: {{ turnoverData|json_encode|raw }},
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return value.toLocaleString('fr-FR') + ' ‚Ç¨';
                            }
                        }
                    }
                }
            }
        });
    </script>
{% endblock %}

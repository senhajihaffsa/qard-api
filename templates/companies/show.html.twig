<h2>📄 Profile</h2>
<pre>{{ profile|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>

<h2>👥 Corporate Officers</h2>
<pre>{{ officers|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>


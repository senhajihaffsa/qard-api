{% extends 'base.html.twig' %}

{% block title %}Companies List{% endblock %}

{% block body %}
<h1>Companies</h1>

<p>
    📥 Export : 
    <a href="{{ path('company_export_excel') }}">Excel</a> |
    <a href="{{ path('company_export_pdf') }}">PDF</a>
</p>

<table border="1" cellspacing="0" cellpadding="5">
    <thead>
        <tr>
            <th>Name</th>
            <th>SIREN</th>
            <th>Created At</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        {% for company in users %}
            <tr>
                <td>{{ company.name }}</td>
                <td>{{ company.siren }}</td>
                <td>{{ company.createdAt|date('Y-m-d H:i') }}</td>
                <td><a href="{{ path('company_show', {id: company.id}) }}">🔍 View</a></td>
            </tr>
        {% else %}
            <tr><td colspan="4">No companies found.</td></tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
